<Page x:Class="DesktopApplication.View.DrinksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopApplication.View"
      xmlns:model="clr-namespace:DesktopApplication.Model"
      xmlns:viewModel="clr-namespace:DesktopApplication.ViewModel"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrinksPage">
    <Page.DataContext>
        <viewModel:DrinksPageViewModel />
    </Page.DataContext>
    <Grid>
        <ItemsControl
            ItemsSource="{Binding Path=DrinkCards, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CardItemsControlStyle}" />
    </Grid>
</Page>